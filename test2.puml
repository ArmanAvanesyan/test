!includeurl https://raw.githubusercontent.com/ArmanAvanesyan/test/main/DFD.puml

!function getTitle($title)
    !return $title
!endfunction

!unquoted procedure Title($title, $subtitle="Context Diagram (DFD Level 0)")
    graph [rankdir=LR ranksep=1.5 splines=true overlap=false labeljust=c labelloc=t fontname="Helvetica,Arial,sans-serif"\
    label=<<TABLE BORDER="0" CELLBORDER="0"> \
    <TR><TD><FONT POINT-SIZE="16">$title</FONT></TD></TR> \
    <TR><TD><FONT POINT-SIZE="10">$subtitle</FONT></TD></TR> \
    </TABLE>> ]
!endprocedure

!unquoted procedure startDfd($title)
digraph dfd2 {
    Title($title)
    node[shape=record]
!endprocedure

!procedure endDfd()
}
!endprocedure

' Elements

!unquoted procedure External($alias, $label)
    $alias [label="$label" shape=box fillcolor=lightblue style=filled fontcolor="#000000"  fontsize=12 color=blue width=2];
!endprocedure

!unquoted procedure Process($alias, $label)
   $alias [label="0 | $label\n\n" shape=Mrecord fillcolor=white style=filled fontcolor="#000000" fontsize=12 color=blue width=2];
!endprocedure
