' Include base components and flows
!includeurl https://raw.githubusercontent.com/ArmanAvanesyan/test/main/new/DFD.puml

' Default styles and settings for Context Level 0
!$DEFAULT_TITLE_FONTSIZE = 16
!$DEFAULT_SUBTITLE_FONTSIZE = 10
!$LEVEL = "Context Level 0"

' Initialize default styles
SetAllComponentColors("lightsteelblue1")
SetAllComponentSizes(2, 1)
SetAllComponentStyles("filled")
SetAllFlowProperties("solid", "black", "black", 13, 1)
SetFlowLayoutOrthogonal()

' Default legend for Context Level 0
!$LEGEND_ITEMS = {
  "External Entity": "External actors or systems that interact with the system",
  "Process": "The main system or process being described",
}

' Set legend position to right by default
SetLegendPosition("right")
SetLegendTitle("Context Level 0 Legend")

' External Entity
!procedure External($alias, $label)
Component($alias, $label, "", "rectangle", "lightgray", $DEFAULT_WIDTH, $DEFAULT_HEIGHT, "external")
!endprocedure

' Process
!procedure Process($alias, $id, $label)
Component($alias, $label, $id, "circle", $DEFAULT_FILLCOLOR, $DEFAULT_WIDTH, $DEFAULT_HEIGHT, "process")
!endprocedure
