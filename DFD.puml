' Data Flows
!unquoted function $getFlow($from, $to, $label, $direction)
  !$flow = $from -> $to [dir=$direction]
  !if ($label !="")
    !$flow = $from -> $to [label="$label", dir="$direction"]
  !endif
  !return $flow
!endfuction

!unquoted procedure Flow($from, $to, $label)
  $getFlow($from, $to, $label, forward)
!endprocedure
!unquoted procedure Flow($from, $to)
  $getFlow($from, $to, "", forward)
!endprocedure

!unquoted procedure BiFlow($from, $to, $label)
  $getFlow($from, $to, $label, both)
!endprocedure
!unquoted procedure BiFlow($from, $to)
  $getFlow($from, $to, "", both)
!endprocedure

!unquoted procedure Flow_Back($from, $to, $label)
  $getFlow($from, $to, $label, back)
!endprocedure
!unquoted procedure Flow_Back($from, $tol)
  $getFlow($from, $to, "", back)
!endprocedure

' Layout Helpers

!unquoted procedure Lay_D($from, $to)
{
  newrank=true;
  $from -> $to [style=invis, constraint=true];
}
!endprocedure

!unquoted procedure Lay_U($from, $to)
  {newrank=true; $to -> $from [style=invis, constraint=true]}
!endprocedure

!unquoted procedure Lay_R($from, $to)
  {{ rank=same; $from -> $to [style=invis, constraint=true]}}
!endprocedure

!unquoted procedure Lay_L($from, $to)
  {{rank=same; $to -> $from [style=invis, constraint=true]}}
!endprocedure
