' Colors
' ##################################

!define ELEMENT_FONT_COLOR #000000
!define PROCESS_BG_COLOR #FFFFFF

' Styling
' ##################################

!global $TECHN_FONT_SIZE = 12

skinparam defaultTextAlignment center
skinparam wrapWidth 200
skinparam maxMessageSize 150

skinparam rectangle {
    StereotypeFontSize 12
    shadowing false
    roundCorner 25
}

skinparam Arrow {
    Color #666666
    FontColor #666666
    FontSize 12
}

' Rectangle styling for processes
skinparam rectangle<<process>> {
    FontColor ELEMENT_FONT_COLOR
    BackgroundColor PROCESS_BG_COLOR
    BorderColor #000000
}

' Elements
' ##################################

!function $getProcess($id, $name)
!if ($id == "")
!return $name
!endif
!if ($id != "")
!return $id+'\n\n'+$name
!endif
!endfunction

!unquoted procedure Process($alias, $name, $id="")
rectangle "$getProcess($id, $name)" <<process>> as $alias
!endprocedure
