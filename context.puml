!function getTitle($title)
    !return $title
!endfunction

' Open the digraph and define the default node shape
!procedure startDfd()
digraph dfd2 {
rankdir="LR"
node[shape=record]
!endprocedure

' Close the digraph
!procedure endDfd()
}
!endprocedure

!procedure External($alias, $label)
    $alias [label="$label" shape=box];
!endprocedure

!procedure Process($alias, $label)
    $alias [label="0 | $label\n\n" shape=Mrecord];
!endprocedure

!procedure Flow_R($from, $to, $label = "")
    !if ($label != "")
        $from -> $to [label="$label" dir=forward];
    !else
        $from -> $to [dir=forward];
    !endif
!endprocedure

!procedure Flow_L($from, $to, $label = "")
    !if ($label != "")
        $from -> $to [label="$label" dir=back];
    !else
        $from -> $to [dir=back];
    !endif
!endprocedure

!procedure BiFlow($from, $to, $label = "")
    !if ($label != "")
        $from -> $to [label="$label" dir=both];
    !else
        $from -> $to [label="$label" dir=both];
    !endif
!endprocedure
