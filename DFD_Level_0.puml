' Profile selectors
!procedure DFD_PROFILE_LEVEL_0()
  !global __DFD_LEVEL = 0
  !global __DFD_ALLOW_DATASTORE = 0
  !global __DFD_ALLOW_SUBPROCESS = 0
  !global __DFD_ALLOW_MULTI_PROCESS = 0
  !$__dfd_process_count = 0
  !global $LEVEL = "Context Diagram"
!endprocedure


' Level 0 Profile Configuration
!procedure DFD_INIT()
  DFD_INIT_BASE()
  DFD_PROFILE_LEVEL_0()


  ' Stylings
  ' #############################################################################
  
  ' Process styling - make the single process more prominent
  SetProcessFillColor("#BBDEFB")  ' Slightly darker blue for emphasis
  SetProcessFontSize(14)          ' Larger font for the main process
  SetProcessSize(3, 1.5)          ' Larger size for the single process
  
  ' External entity styling - clear boundaries
  SetExternalFillColor("#FFF9C4")  ' Light yellow for external entities
  SetExternalFontSize(12)
  SetExternalSize(2.5, 1.5)        ' Slightly larger for visibility
  
  ' Flow styling - clear, simple flows
  SetFlowColor("#1976D2")          ' Blue flows for context diagram
  SetFlowFontSize(12)
  SetFlowPenWidth(2)               ' Thicker flows for clarity
  
  ' Layout - optimized for context view
  SetRankDir("LR")                 ' Left to right layout
  SetRankSep(2.0)                   ' More space between ranks
  SetNodeSep(1.0)                   ' More space between nodes
  
  ' Apply skin parameters specific to Level 0
  skinparam Rectangle {
    BackgroundColor #BBDEFB
    BorderColor #1976D2
    BorderThickness 2
  }
  
  skinparam Actor {
    BackgroundColor #FFF9C4
    BorderColor #F57F17
    BorderThickness 2
  }
  
  skinparam Arrow {
    Color #1976D2
    Thickness 2
  }
  
  ' Title/Subtitle defaults for Level 0
  !global $LEVEL = "Context Diagram"
  SetTitleFontSize(18)              ' Larger title for context diagrams
  SetTitleFontColor("#1976D2")      ' Blue title color

!endprocedure
