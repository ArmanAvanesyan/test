!procedure External($alias, $label)
    $alias [label="$label", shape=box, fillcolor=lightblue, style=filled, fontcolor=black, fontsize=12, color=black, width=2];
!endprocedure

!procedure Process($alias, $id, $name)
    $alias [label="{<f0> $id |<f1> $name\n\n\n}", shape=Mrecord, style=bold];
!endprocedure

!procedure Store($alias, $id, $name)
    $alias [label="<f0> $id   |<f1> $name", fillcolor=lightblue, style=filled];
!endprocedure

!procedure Flow($from, $to, $label = "")
    !if ($label != "")
         $from -> $to [label="$label"];
    !else
         $from -> $to [constraint=false];
    !endif
!endprocedure

!procedure Flow($from, $to, $label = "", $extra = "")
    !if ($label != "")
         $from -> $to [ label="$label"$extra ];
    !else
         $from -> $to [ constraint=false $extra ];
    !endif
!endprocedure

' Semantic wrappers for flows:
!procedure ExtToProc($ext, $proc, $label = "")
    Flow($ext, $proc, $label);
!endprocedure

!procedure ProcToExt($proc, $ext, $label = "")
    Flow($proc, $ext, $label);
!endprocedure

!procedure ProcToProc($proc1, $proc2, $label = "")
    Flow($proc1, $proc2, $label);
!endprocedure

!procedure ProcToStore($proc, $store, $label = "")
    Flow($proc, $store, $label);
!endprocedure

!procedure StoreToProc($store, $proc, $label = "")
    Flow($store, $proc, $label);
!endprocedure

' New procedure to draw an edge from a store to a process with a reversed arrow:
!procedure StoreToProcBack($store, $proc, $label = "")
    Flow($store, $proc, $label, ", dir=back");
!endprocedure
